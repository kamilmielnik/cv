{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "noEmit": true,
    "paths": {
      "api": [
        "./src/api"
      ],
      "components": [
        "./src/components"
      ],
      "data": [
        "./src/data"
      ],
      "icons": [
        "./src/icons"
      ],
      "lib": [
        "./src/lib"
      ],
      "pages": [
        "./src/pages"
      ],
      "styles": [
        "./src/styles"
      ],
      "tracking": [
        "./src/tracking"
      ],
      "types": [
        "./src/types"
      ]
    },
    "resolveJsonModule": true,
    "rootDir": "./src",
    "skipLibCheck": true,
    "strict": false,
    "target": "es2021",
    "incremental": true,
    "module": "esnext",
    "moduleResolution": "node"
  },
  "exclude": [
    "node_modules"
  ],
  "files": [
    "./src/icons/@types/icons.d.ts"
  ],
  "include": [
    "next-env.d.ts",
    "./src"
  ]
}
